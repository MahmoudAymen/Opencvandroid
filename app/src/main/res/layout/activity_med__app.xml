<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="clip_vertical"
    android:background="@color/white"
    android:showDividers="middle"

    tools:context="com.example.aymen.splashactivity.MED_APP">
    <LinearLayout
        android:background="@android:color/darker_gray"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="309dp">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:src="@drawable/main"
            android:adjustViewBounds="true" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/baner2"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip" />
    <LinearLayout
        android:gravity="center|left"
        android:background="@android:color/white"
        android:paddingLeft="20.0dip"
        android:paddingRight="2.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip">
        <Button
            android:textSize="16.0dip"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/b1"
            android:background="@android:color/transparent"
            android:padding="0.0dip"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:text="@string/image_analyses"
            android:drawableTop="@drawable/analysis" />
        <Button
            android:textSize="16.0dip"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/load"
            android:background="@android:color/transparent"
            android:padding="0.0dip" android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:text="Open"
            android:drawableTop="@drawable/cam" />

        <Button
            android:textSize="16.0dip"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/closeAnalysis"
            android:background="@android:color/transparent"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:text="HOME"
            android:drawableTop="@drawable/home" />
    </LinearLayout>

</LinearLayout>
