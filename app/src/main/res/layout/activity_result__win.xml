<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/black_overlay"
    tools:context="com.example.aymen.splashactivity.Result_WIN"
    android:weightSum="1">

    <LinearLayout
        android:background="@color/greanw2"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="154dp"
        android:layout_weight="0.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/i"
                android:layout_width="150.0dip"
                android:layout_height="120.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="left"
                android:id="@+id/textView8"
                android:background="@color/black_overlay"
                android:paddingLeft="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:text="Original image" />
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150.0dip"
                android:layout_height="120.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="left"
                android:id="@+id/TextView01"
                android:background="@color/black_overlay"
                android:paddingLeft="10.0dip"
                android:layout_width="270dp"
                android:layout_height="30.0dip"
                android:text="Color analysis" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/greanw2"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="154dp"
        android:layout_weight="0.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150.0dip"
                android:layout_height="120.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="left"
                android:id="@+id/TextView02"
                android:background="@color/black_overlay"
                android:paddingLeft="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:text="X symmetry" />
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150.0dip"
                android:layout_height="120.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />

            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="left"
                android:id="@+id/TextView03"
                android:background="@color/black_overlay"
                android:paddingLeft="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:text="Y symmetry" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/greanw1"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="78dp">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:gravity="left"
            android:id="@+id/t"
            android:textStyle="italic"
            android:textSize="55dp"
            android:background="@color/black_overlay"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="78dp"
            android:text="Melanome" />

    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/greanw1"
        android:layout_width="fill_parent"
        android:layout_height="79dp"
        android:layout_weight="0.71">
        <Button android:textSize="16.0dip"
            android:textColor="#ff2c0000"
            android:gravity="center"
            android:id="@id/closeAnalysis"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="HOME"

            android:drawableTop="@drawable/home"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</LinearLayout>
